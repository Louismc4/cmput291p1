<% include ./partials/headerloginregister %>

    <div class="container">
        <div class="row">
            <div style="width: 30%; margin:30px auto;">
                <h1 style="text-align: center">Register Customer</h1>
                <form action="/registercustomer" method="POST">
                    <div class="form-group">
                        <input class="form-control" name="custregisterid" placeholder="Unique ID" required>
                    </div>
                    <div class="form-group">
                        <input class="form-control" name="custregistername" placeholder="Customer Name" required>
                    </div>
                    <div class="form-group">
                        <input class="form-control" name="custregisteraddress" placeholder="Customer Address" required>
                    </div>
                    <div class="form-group">
                        <input class="form-control" name="customerregisterpassword" type="password" placeholder="Customer Password" required>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Register!</button>
                    </div>
                </form>
                <h1 style="text-align: center">Login Customer</h1>
                <form action="/logincustomer" method="POST">
                    <div class="form-group">
                        <input class="form-control" name="custloginid" placeholder="Customer ID" required>
                    </div>
                    <div class="form-group">
                        <input class="form-control" name="custloginpassword" type="password" placeholder="Customer Password" required>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Login!</button>
                    </div>
                </form>
                <h1 style="text-align: center">Login Agent</h1>
                <form action="/loginagent" method="POST">
                    <div class="form-group">
                        <input class="form-control" name="agentloginname" placeholder="Agent ID" required>
                    </div>
                    <div class="form-group">
                        <input class="form-control" name="agentloginpassword" type="Password" placeholder="Agent password" required>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Login!</button>
                    </div>
                </form>
                <h1 style="text-align: center">Exit</h1>
                <form action="https://www.google.ca" method="GET">
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Exit To Google!</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
<% include ./partials/footer %>